<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewInfo" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:layout_marginLeft">@dimen/text_margin</item>
        <item name="android:layout_marginRight">@dimen/text_margin</item>
        <item name="android:paddingBottom">@dimen/layout_margin</item>
    </style>

    <style name="TextViewLabel" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
